/* classes */
.classes{
    padding: 32rpx 27rpx 32rpx 31rpx;
    background:rgba(255,255,255,1);
    border-radius:10rpx;
    display: flex;
    flex-wrap:  wrap;
}
.classList{
    width: 300rpx;
    height: 120rpx;
    border-radius:20rpx;
}
.classList:nth-of-type(odd){
    background:linear-gradient(-74deg,#EBF7FF,rgba(255,255,255,0.42));
    margin-right: 32rpx;

}
.classList:nth-of-type(even){
    background:linear-gradient(-74deg,rgba(255,240,229,1),rgba(255,255,255,0.42));
}
.classTitle{
    height: 19rpx;
    font-size:20rpx;
