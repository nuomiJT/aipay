/* main.wxss */
.container {
  height: 100%;
  padding: 0 30rpx 0 30rpx;
  background:#F4F4F4;
}

/* logo img */
.imgLogo {
  width: 750rpx;
  height: 250rpx;
  padding: 30rpx 0 10rpx 0;
  border-radius: 44rpx;
}

/* camp title */
.head {
  height: 31rpx;
  width: 690rpx;
  color: #999999;
  margin-bottom: 40rpx;
}

.head radio-group{
  width: 100%;
  display: inline-block;
}

.head label {
  display: inline-block;
  text-align: left;
  border: none;
  background: none;
  width: 100%;
}
.head label.active{
  border: none;
  color: #333;
  font-weight: 500;
}

.leftBorder {
  display: inline-block;
  opacity: 0;
  color: red;
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 9rpx;
}
.leftBorder.titleShow{
  opacity: 1;
}

.title {
  display: inline-block;
  font-size: 32rpx;
  margin-right: 49rpx;
}

.subheading {
  display: inline-block;
  font-size: 32rpx;
}

.three {
  display: inline-block;
  font-size: 24rpx;
}

/* grade radio */
.grade radio-group{
  width: 100%;
  margin-bottom: 36rpx;
}

.grade.gradeShow{
  opacity: 0;
}

.radioBox{
  display: flex;
  width: 100%;
}

.item{
  flex: 1;
  text-align: center;
}

.grade label{
  display: inline-block;
  color: #999999;
  font-size: 24rpx;
  text-align: center;
  width: 91rpx;
  height: 45rpx;
  line-height: 45rpx;
  background: rgba(255,255,255,1);
  border: 1rpx solid rgba(153,153,153,1);
  border-radius: 22rpx;
}
.grade label.active{
  color: #DE453D;
  border: 1rpx solid #DE453D;
}

/* class */
.detailClass{
  width: 690rpx;
  height: 273rpx;
  border: 1px solid rgba(255,255,255,1);
  border-radius: 10rpx;
  background: rgba(255,255,255,1);
  margin-bottom: 24rpx;
  overflow: hidden;
}

/* class title */
.topClass{
  height: 84rpx;
  font-weight: 400;
  background: #FFFFFF;
}

.classLogo{
  display: inline-block;
  font-size: 20rpx;
  width: 80rpx;
  height: 32rpx;
  line-height: 32rpx;
  color: #FFFFFF;
  background: #E46761;
  text-align: center;
  border-radius:15rpx;
  margin-left: 20rpx;
  margin-right: 9rpx;
  position: relative;
  top: -4rpx;
}

.classTitle{
  display: inline-block;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 34rpx;
  opacity:0.9;
  margin: 29rpx 0 23rpx 0;
}

/* class info */
.bottomClass{
  color: #666666;
  width: 643rpx;
  height: 160rpx;
  font-size: 24rpx;
  background: #FAFAFA;
  position: relative;
  margin: 0 23rpx 20rpx 21rpx;
}

.time{
  display: inline-block;
  position: absolute;
  top:34rpx;
  left: 31rpx;
}

.teacher{
  display: inline-block;
  position: absolute;
  bottom: 36rpx;
  left: 31rpx;
}

/* price */
.price{
  display: inline-block;
  position: absolute;
  bottom: 30rpx;
  right: 22rpx;
}

.groupPrice{
  display: inline-block;
  width: 80rpx;
  height: 36rpx;
  line-height: 36rpx;
  color: #333333;
  background: #FEDA60;
  text-align: center;
  margin-right: 12rpx;
  border-radius: 4rpx;
  position: relative;
  top: -4rpx;
}

.priceLeft{
  color: #DE453D;
}

.priceNumber{
  color: #DE453D;
  font-size: 32rpx;
}

.priceRight{
  color: #DE453D;
}