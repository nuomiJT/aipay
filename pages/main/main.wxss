/* main.wxss */
.container {
  padding: 0 30rpx 0 30rpx;
  background:rgba(250,250,250,1);
}

/* logo img */
.imgLogo {
  width: 690rpx;
  height: 250rpx;
  padding: 30rpx 0 40rpx 0;
  border-radius: 44rpx;
}

/* camp title */
.head {
  height: 31rpx;
  /* width: 690rpx; */
  margin-bottom: 40rpx;
}

.leftBorder {
  color: red;
  font-weight: bold;
  margin-right: 9rpx;
}

.title {
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
  margin-right: 49rpx;
}

.subheading {
  color: #999;
  font-size: 32rpx;
}

.three {
  color: #999;
  font-size: 24rpx;
}

/* grade radio */
radio-group{
  width: 100%;
  margin-bottom: 36rpx;
}

.radioBox{
  display: flex;
  width: 100%;
  }

.item{
  flex: 1;
  text-align: center;
}

label{
  display: inline-block;
  font-size: 24rpx;
  text-align: center;
  width: 91rpx;
  height: 45rpx;
  line-height: 45rpx;
  border: 1rpx solid #999999;
  border-radius: 22rpx;
}
label.active{
  color: #DE453D;
  border: 1rpx solid #DE453D;
}

/* class */
.detailClass{
  width: 690rpx;
  height: 200rpx;
  border: 1px solid rgba(255,255,255,1);
  border-radius: 40rpx;
  background: rgba(255,255,255,1);
  margin-bottom: 24rpx;
  overflow: hidden;
}

/* class title */
.topClass{
  height: 84rpx;
  background: #FCECEB;
}

.classTitle{
  display: inline-block;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 34rpx;
  font-weight: 400;
  opacity:0.9;
  margin: 29rpx 175rpx 23rpx 145rpx;
}

/* class info */
.bottomClass{
  color: #666666;
  width: 690rpx;
  height: 116rpx;
  font-size: 24rpx;
  position: relative;
}

.time{
  display: inline-block;
  position: absolute;
  top:24rpx;
  left: 31rpx;
}

.teacher{
  display: inline-block;
  position: absolute;
  top: 66rpx;
  left: 31rpx;
}

.price{
  display: inline-block;
  position: absolute;
  top: 58rpx;
  right: 37rpx;
}

.priceLeft{
  color: #DE453D;
}

.priceNumber{
  color: #DE453D;
  font-size: 32rpx;
}