/* class.wxss */

.wrapper {
  height: 100%;
  padding: 26rpx 30rpx 0 30rpx;
  background: #f4f4f4;
}

/* class list */

.classList {
  height: 238rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  margin-bottom: 24rpx;
  padding-top: 38rpx;
  padding-left: 21rpx;
  /* padding: 38rpx 23rpx 35rpx 21rpx; */
}

text {
  display: inline-block;
}

button {
  display: inline-block;
}

/* classlist top */

.topClassList {
  margin-bottom: 44rpx;
}

.classTitle {
  font-size: 30rpx;
  height: 29rpx;
  line-height: 29rpx;
}

.time {
  font-size: 26rpx;
  font-weight: 400;
  color: #999;
  height: 25rpx;
  line-height: 25rpx;
}

/* classlist bottom */

.bottomClassList {
  height: 37rpx;
  position: relative;
}

.priceLeft {
  color: #de453d;
  font-size: 24rpx;
}

.priceNumber {
  height: 37rpx;
  color: #de453d;
  font-size: 48rpx;
  margin-right: 19rpx;
}

.priceRight {
  color: #999;
  text-decoration: line-through;
  font-size: 24rpx;
  margin-right: 26rpx;
}

.groupBuying {
  color: #de453d;
  height: 36rpx;
  padding: 0 10rpx 0 10rpx;
  border-radius: 4px;
  font-size: 24rpx;
  background: rgba(222, 69, 61, 0.1);
}

.start {
  width: 135rpx;
  height: 51rpx;
  line-height: 51rpx;
  text-align: center;
  font-size: 24rpx;
  color: #de453d;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(222, 69, 61, 1);
  border-radius: 25rpx;
  padding-left: 0rpx;
  padding-right: 0rpx;
  position: absolute;
  right: 23rpx;
}
