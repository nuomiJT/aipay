/* detailclass.wxss */

page {
  background: #f4f4f4;
}

.wrapper {
  height: 100%;
  padding: 20rpx 30rpx 46rpx 30rpx;
}

/* base info */

.baseInfo {
  width: 100%;
  height: 300rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.baseInfoTop {
  height: 158rpx;
  border-bottom: 1rpx solid #eee;
}

.baseInfoBottom {
  height: 141rpx;
}

.baseInfoBottom image {
  height: 80rpx;
  width: 80rpx;
}

.baseInfoBottom .teacher {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.baseInfoBottom .priceLeft {
  font-size: 24rpx;
  color: #de453d;
}

.baseInfoBottom .price {
  font-size: 48rpx;
  color: #de453d;
}

.baseInfoBottom .priceRight {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

/* group buying */

/* countdown */

.countDown {
  height: 110rpx;
  background: rgba(242, 230, 230, 1);
  border-radius: 10px;
  margin-bottom: 20rpx;
}

/* group user */

.groupUser {
  border-radius: 10px;
  background: rgba(255, 255, 255, 1);
  margin-bottom: 23rpx;
}

.groupUserTitle {
  height: 90rpx;
  line-height: 90rpx;
  position: relative;
  padding: 0 20rpx 0 20rpx;
  border-bottom: 1rpx solid #eee;
}

.groupUserTitle-left {
  font-size: 30rpx;
}

.groupUserTitle-right {
  color: #999;
  font-size: 26rpx;
  text-align: right;
  position: absolute;
  right: 20rpx;
}

/* group rule */

.groupRule {
  height: 210rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10px;
  margin-bottom: 23rpx;
}

/* course info */

/* course characteristic */

.characteristic {
  height: 268rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10px;
  margin-bottom: 23rpx;
}

.characteristicTitle {
  display: inline-block;
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  margin-top: 32rpx;
  margin-left: 22rpx;
}

.characteristicContent {
  padding: 24rpx 32rpx 35rpx 30rpx;
}

.characteristicContent text {
  display: inline-block;
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  font-weight: 400;
  text-align: center;
  background: rgba(250, 250, 250, 1);
  color: #666;
  border-radius: 30rpx;
  margin-right: 28rpx;
  margin-bottom: 28rpx;
}

.characteristicContent text:nth-child(2) {
  margin-right: 0rpx;
}

.characteristicContent text:nth-child(4) {
  margin-right: 0rpx;
}

/* course introduction */

.introduction {
  height: 600rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10px;
  margin-bottom: 21rpx;
}

/* course live */

.live {
  height: 662rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10px;
  margin-bottom: 110rpx;
}

/* footer */

.footer {
  width: 100%;
  height: 110rpx;
  background: rgba(255, 255, 255, 1);
  position: fixed;
  bottom: 0rpx;
}
